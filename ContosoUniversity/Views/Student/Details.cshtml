@model ContosoUniversity.Models.Student

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Details</h2>

<dl>
    <dt>
        @Html.DisplayNameFor(model => model.LastName)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.LastName)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.FirstMidName)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.FirstMidName)
    </dd>

    <dt>
        @Html.DisplayNameFor(model=>model.EnrollmentDate)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.EnrollmentDate)
    </dd>
    
    <dt>
        @Html.DisplayNameFor(model=>model.Enrollments)
    </dt>
    
    <dd>
        <table class="table">
            <tr>
                <th>
                    Course Title
                </th>                
                <th>
                    Grade
                </th>                
            </tr>
            @foreach (var enrollment in Model.Enrollments)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => enrollment.Course.Title)</td>
                    <td>
                        @Html.DisplayFor(modelItem => enrollment.Grade)
                    </td>
                </tr>
            }
        </table>
    </dd>
</dl>
<p>
    @Html.ActionLink("Back", "Index","Student", new {@class="btn btn-default"})
    @Html.ActionLink("Edit",
        "Edit","Student", new {id=Model.ID}, new {@class="btn btn-default"})
</p>